/**app.wxss**/
/* 全局样式优化 - 遵循微信小程序设计指南 */

/* 自定义字体定义 - 阿里巴巴普惠体 2.0 55 Regular */
@font-face {
  font-family: "阿里巴巴普惠体 2.0 55 Regular";
  font-weight: 400;
  src: url("https://at.alicdn.com/wf/webfont/ymMdFTpfu3hd/Icuox4XyLcg7.woff2") format("woff2"), 
       url("https://at.alicdn.com/wf/webfont/ymMdFTpfu3hd/WMOxOLTyo8Of.woff") format("woff");
  font-variation-settings: normal;
  font-display: swap;
}

/* 基础容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

/* 按钮样式重置 */
button {
  background: initial;
}

button:focus {
  outline: 0;
}

button:after {
  border: none;
}

/* 页面基础样式 */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-family: "阿里巴巴普惠体 2.0 55 Regular", -apple-system, "PingFang SC", "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
  color: #333333;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 全局主题色定义 */
:root {
  --primary-color: #1485ee;      /* 主题色 - 大数字 */
  --secondary-color: #10aeff;    /* 次要主题色 - 小数字 */
  --accent-color: #007aff;       /* 强调色 - 按钮、链接等 */
  --success-color: #07c160;      /* 成功色 */
  --warning-color: #ffbe00;      /* 警告色 */
  --error-color: #fa5151;        /* 错误色 */
  
  --text-primary: #333333;       /* 主要文字颜色 */
  --text-secondary: #666666;     /* 次要文字颜色 */
  --text-tertiary: #999999;      /* 辅助文字颜色 */
  
  --bg-primary: #ffffff;         /* 主要背景色 */
  --bg-secondary: #f8f9fa;       /* 次要背景色 */
  --bg-tertiary: #f0f0f0;        /* 辅助背景色 */
  
  --border-color: #e1e5e9;       /* 边框颜色 */
  --divider-color: #f0f0f0;      /* 分割线颜色 */
}

/* 全局数字字体设置 - 使用专门的等宽字体确保数字和标点符号正确显示 */
.number,
.amount,
.currency,
.price,
.value,
.category-total,
.total-amount,
.category-amount,
.current-value,
.original-value,
.pie-total,
.comparison-value,
.summary-value,
.top-value {
  font-family: "RobotoMono", "SourceCodePro", "SF Mono", "Monaco", "Inconsolata", "Fira Code", "Droid Sans Mono", "Courier New", monospace;
  font-variant-numeric: tabular-nums;
  font-feature-settings: "tnum";
}

/* 大数字样式 - 强调重要数据 */
.large-number {
  font-size: 56rpx;
  font-weight: 600;
  color: #1485ee;
  line-height: 1.2;
  font-family: "RobotoMono", "SourceCodePro", "SF Mono", "Monaco", "Inconsolata", "Fira Code", "Droid Sans Mono", "Courier New", monospace;
  font-variant-numeric: tabular-nums;
  font-feature-settings: "tnum";
}

/* 小数字样式 - 次要数据 */
.small-number {
  font-size: 32rpx;
  font-weight: 500;
  color: #10aeff;
  line-height: 1.2;
  font-family: "RobotoMono", "SourceCodePro", "SF Mono", "Monaco", "Inconsolata", "Fira Code", "Droid Sans Mono", "Courier New", monospace;
  font-variant-numeric: tabular-nums;
  font-feature-settings: "tnum";
}

/* 全局按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #1485ee;
  color: #ffffff;
}

.btn-primary:active {
  opacity: 0.8;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 24rpx;
}

/* 列表样式 */
.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}