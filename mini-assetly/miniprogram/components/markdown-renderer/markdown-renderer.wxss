/* components/markdown-renderer/markdown-renderer.wxss */
.markdown-container {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 标题样式 */
.markdown-h1 {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin: 32rpx 0 24rpx 0;
  border-bottom: 2rpx solid #e0e0e0;
  padding-bottom: 16rpx;
}

.markdown-h2 {
  font-size: 32rpx;
  font-weight: bold;
  color: #2a2a2a;
  margin: 28rpx 0 20rpx 0;
}

.markdown-h3 {
  font-size: 30rpx;
  font-weight: bold;
  color: #3a3a3a;
  margin: 24rpx 0 16rpx 0;
}

.markdown-h4 {
  font-size: 28rpx;
  font-weight: bold;
  color: #4a4a4a;
  margin: 20rpx 0 12rpx 0;
}

.markdown-h5 {
  font-size: 26rpx;
  font-weight: bold;
  color: #5a5a5a;
  margin: 16rpx 0 8rpx 0;
}

/* 段落样式 */
.markdown-p {
  margin: 16rpx 0;
  line-height: 1.8;
}

/* 列表样式 */
.markdown-li {
  display: flex;
  align-items: flex-start;
  margin: 8rpx 0;
  padding-left: 0;
}

.markdown-bullet {
  color: #666;
  margin-right: 16rpx;
  font-weight: bold;
  flex-shrink: 0;
  line-height: 1.6;
}

.markdown-li-content {
  flex: 1;
  line-height: 1.6;
}

/* 有序列表样式 */
.markdown-ol {
  display: flex;
  align-items: flex-start;
  margin: 8rpx 0;
  padding-left: 0;
}

.markdown-number {
  color: #666;
  margin-right: 16rpx;
  font-weight: bold;
  flex-shrink: 0;
  line-height: 1.6;
  min-width: 32rpx;
}

.markdown-ol-content {
  flex: 1;
  line-height: 1.6;
}

/* 粗体样式 */
.markdown-bold {
  font-weight: bold;
  color: #1a1a1a;
}

/* 换行样式 */
.markdown-br {
  height: 16rpx;
}

/* 分隔线样式 */
.markdown-hr {
  height: 2rpx;
  background: linear-gradient(90deg, #e0e0e0 0%, #f0f0f0 50%, #e0e0e0 100%);
  margin: 32rpx 0;
  border: none;
}

/* 表格样式 */
.markdown-table {
  margin: 24rpx 0;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
  background: #fff;
}

.table-header {
  display: flex;
  background: #f8f9fa;
  border-bottom: 2rpx solid #e0e0e0;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  padding: 16rpx 12rpx;
  font-size: 26rpx;
  line-height: 1.5;
  border-right: 1rpx solid #f0f0f0;
  word-break: break-all;
}

.table-cell:last-child {
  border-right: none;
}

.table-header-cell {
  font-weight: bold;
  color: #333;
  background: #f8f9fa;
  border-right: 1rpx solid #e0e0e0;
}

/* 特殊样式 */
.markdown-container .markdown-h2:first-child,
.markdown-container .markdown-h3:first-child {
  margin-top: 0;
}

.markdown-container .markdown-p:last-child {
  margin-bottom: 0;
}