.container {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 200rpx; /* 为底部按钮留出空间 */
}

.asset-form {
  width: 100%;
  background-color: #fff;
  padding: 32rpx;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.required {
  color: #ff3b30;
  font-size: 28rpx;
  margin-left: 4rpx;
}

.optional {
  color: #999;
  font-size: 24rpx;
  margin-left: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  background-color: #fff;
  box-sizing: border-box;
  outline: none;
  -webkit-appearance: none;
  appearance: none;
}

.form-input:focus {
  border-color: #007aff;
}

.form-input.error {
  border-color: #ff3b30;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  background-color: #fff;
  box-sizing: border-box;
  outline: none;
  -webkit-appearance: none;
  appearance: none;
  resize: none;
}

.form-textarea:focus {
  border-color: #007aff;
}

.input-wrapper {
  position: relative;
}

.currency-symbol {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #666;
  z-index: 1;
}

.currency-input {
  padding-left: 48rpx;
}

.date-picker {
  width: 100%;
}

.date-display {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.date-display.error {
  border-color: #ff3b30;
}

.date-text {
  color: #1a1a1a;
}

.category-selector {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.category-selector.error {
  border-color: #ff3b30;
}

.category-display {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.category-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
}

.selector-arrow {
  color: #999;
  font-size: 24rpx;
}

/* AI估值按钮样式 */
.ai-estimate-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  margin-left: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.ai-estimate-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

.ai-estimate-btn[disabled] {
  background: #ccc;
  box-shadow: none;
  transform: none;
}

.ai-icon {
  font-size: 28rpx;
}

/* 表单提示文字 */
.form-hint {
  font-size: 24rpx;
  color: #10B981;
  margin-top: 8rpx;
  padding: 8rpx 12rpx;
  background: rgba(16, 185, 129, 0.1);
  border-radius: 8rpx;
  border-left: 4rpx solid #10B981;
}

.error-text {
  color: #ff3b30;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.form-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  background-color: #fff;
  border-top: 1rpx solid #e1e5e9;
  z-index: 100;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-secondary {
  background-color: #f8f9fa;
  color: #666;
}

.btn-primary {
  background-color: #007aff;
  color: #fff;
}

.btn:active {
  opacity: 0.8;
}

/* 分类选择器弹窗 */
.category-picker {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 400rpx; /* 设置固定高度 */
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 1001;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.category-picker.show {
  transform: translateY(0);
}

.picker-item {
  height: 80rpx; /* 设置固定高度 */
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.picker-item:hover {
  background-color: #f8f9fa;
}

.picker-item:last-child {
  border-bottom: none;
}

.category-option {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  width: 100%;
}

.category-color {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.category-name {
  font-size: 30rpx;
  color: #1a1a1a;
  font-weight: 500;
  text-align: center;
}

.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.picker-mask.show {
  opacity: 1;
  pointer-events: auto;
}