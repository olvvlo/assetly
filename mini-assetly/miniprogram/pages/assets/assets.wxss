/* pages/assets/assets.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 分享按钮 */
.share-header {
  width: 100%;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: center;
}

.share-btn {
  width: 100% !important;
  background: linear-gradient(135deg, #1485ee, #10aeff);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(20, 133, 238, 0.3);
}

.share-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.share-icon {
  font-size: 36rpx;
}

/* 分享预览 */
.share-preview {
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
}

/* 预览标题 */
.preview-header {
  text-align: center;
  padding-bottom: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 56rpx;
}

.preview-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 20rpx;
}

.preview-date {
  font-size: 30rpx;
  color: #666;
}

/* 总资产 */
.total-asset {
  background: linear-gradient(135deg, #e6f3ff, #f0f9ff);
  border-radius: 24rpx;
  padding: 56rpx 48rpx;
  text-align: center;
  margin-bottom: 56rpx;
  border: 1rpx solid rgba(20, 133, 238, 0.1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.total-label {
  display: block;
  font-size: 30rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.total-amount {
  display: block;
  font-size: 68rpx;
  font-weight: 700;
  color: #1485ee;
  margin-bottom: 20rpx;
  letter-spacing: -1rpx;
}

.total-count {
  font-size: 26rpx;
  color: #666;
}

/* 章节标题 */
.section-title {
  display: block;
  font-size: 38rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 36rpx;
}

/* 资产分布 */
.asset-distribution {
  margin-bottom: 56rpx;
}

.category-list {
  display: flex;
  flex-direction: column;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
}

.category-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.category-icon {
  width: 48rpx;
  height: 48rpx;
}

.category-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.category-percentage {
  font-size: 28rpx;
  color: #666;
}

.category-amount {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

/* 资产列表 */
.asset-list {
  margin-bottom: 56rpx;
}

.asset-items {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.asset-item {
  display: flex;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.asset-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.asset-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.asset-category-icon {
  width: 48rpx;
  height: 48rpx;
}

.asset-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.asset-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.asset-category {
  font-size: 24rpx;
  color: #666;
  padding: 4rpx 16rpx;
  background: #f3f4f6;
}

.asset-holding-tag {
  font-size: 24rpx;
  color: #007aff;
  background-color: #e6f3ff;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  margin-left: auto;
  white-space: nowrap;
}

.asset-remark {
  font-size: 20rpx;
  color: #999;
  margin-top: 8rpx;
}

.asset-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-left: 24rpx;
}

.asset-value {
  text-align: right;
  margin-left: 36rpx;
}

.current-value {
  font-size: 34rpx;
  font-weight: 700;
  color: #2563eb;
}

.original-value {
  font-size: 24rpx;
  color: #999;
}

.purchase-date {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 48rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  display: block;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #999;
}

/* 页脚 */
.preview-footer {
  text-align: center;
  padding-top: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}

/* 隐藏画布 */
/* 分享预览弹框 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx 32rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 0;
  text-align: center;
  max-height: 60vh;
  overflow-y: auto;
}

.preview-image {
  width: 100%;
  display: block;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn.secondary {
  background-color: #f5f5f5;
  color: #666;
}

.modal-btn.primary {
  background-color: #007aff;
  color: #fff;
}

.modal-btn.primary:active {
  background-color: #0056cc;
}

.modal-btn.secondary:active {
  background-color: #e0e0e0;
}

.share-canvas {
  position: fixed;
  top: -9999rpx;
  left: -9999rpx;
  width: 400rpx;
  height: 800rpx;
}