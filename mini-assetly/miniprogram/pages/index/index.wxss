/* pages/index/index.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx;
  background: linear-gradient(135deg, #1485ee, #10aeff);
  color: #fff;
  width: 100%;
  box-sizing: border-box;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.app-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
}

.title-group {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.main-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #fff;
}

.sub-title {
  font-size: 26rpx;
  opacity: 0.8;
  color: #fff;
}

.header-right {
  display: flex;
  align-items: center;
}

.add-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.add-icon {
  color: #fff;
  font-size: 48rpx;
  font-weight: 900;
  margin-top: -4rpx;
}

/* 总资产卡片 */
.total-card {
  margin: 24rpx 16rpx;
  padding: 40rpx 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  width: calc(100% - 32rpx);
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
}

.total-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.total-amount {
  font-size: 56rpx;
  font-weight: 600;
  color: #1485ee;
}

.total-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.asset-count-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #10aeff;
  line-height: 1;
}

.asset-count-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 分类概览 */
.category-overview {
  margin: 24rpx 16rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 32rpx);
  box-sizing: border-box;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  width: 100%;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  width: 100%;
}

.category-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.category-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.category-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.category-value {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.amount {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.percentage {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 资产列表 */
.asset-section {
  margin: 24rpx 16rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 32rpx);
  box-sizing: border-box;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.sort-options {
  display: flex;
  gap: 16rpx;
}

.sort-btn {
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

.sort-btn.active {
  color: #007aff;
  background-color: #e6f3ff;
}

.category-groups {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.category-group {
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
}

.category-header {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background-color: #f8f9fa;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-header .category-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.category-header .category-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.category-total {
  font-size: 28rpx;
  font-weight: 600;
  color: #007aff;
}

.asset-list {
  display: flex;
  flex-direction: column;
}

.asset-item {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.asset-item:last-child {
  border-bottom: none;
}

.asset-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.asset-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.asset-name {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.asset-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.asset-date {
  font-size: 24rpx;
  color: #999;
}

.asset-holding {
  font-size: 22rpx;
  color: #007aff;
  background-color: #e6f3ff;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}

.asset-remark {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.asset-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.asset-amount {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 600;
}

.asset-original {
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.empty-icon {
  width: 300rpx;
  height: 300rpx;
  font-size: 120rpx;
}

.empty-image {
  width: 100%;
  height: 100%;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

.empty-btn {
  background-color: #007aff;
  color: #fff;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  border: none;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  margin: 24rpx 16rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 32rpx);
  box-sizing: border-box;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}
